{
	"DEFAULT_LOGGER" : "default",
	"logger" : {
		"default" : {
			"logLevel" : "TRACE",
			"filters" : [
				"ERROR_FORMAT",
				{
					"name" : "TOKEN_FORMAT",
					"format" : "${msg.stack.1} ${msg.level}: ${msg}"
				},

				"LOG_MANAGER_WRITER"
			],

			"doc" : "catch all group"
		},

		"OpenEdge" : {
			"logLevel" : "INFO",
			"filters" : [
				"ERROR_FORMAT",
				{
					"name" : "TOKEN_FORMAT",
					"format" : "${msg.grp} ${msg.stack.1} ${msg.level}: ${msg}"
				},

				"LOG_MANAGER_WRITER"
			],

			"doc" : "applies to OpenEdge/**/*.[p|cls]"
		}
	}
}